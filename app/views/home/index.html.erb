<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>CUV</title>
    <link rel="stylesheet" href="../assets/main.css">
</head>
<body>
<div class="wrapper">
    <div class="header">
        <h1>Comic Update Viewer</h1>
    </div>
    <div class="updates">
        <div class="today_update">
            <h2>今日の更新</h2>
            <div class="comics">
            <% @comics.each do |comic|%>
                <div class="comic">
                  <%= link_to(comic.url,target: "_blank") do %>
                    <%= image_tag "#{comic.thum_url}" %>
                    <p>
                      <%= comic.title %>
                    </p>
                  <% end %>
                </div>
            <% end %>
            </div>
        </div>
        <div class="past_update">
            <h2>過去の更新</h2>
            <div class="comics">
              <% @old_comics.each do |comic|%>
                  <div class="comic">
                    <%= link_to(comic.url,target: "_blank") do %>
                      <%= image_tag "#{comic.thum_url}" %>
                      <p>
                        <%= comic.title %>
                      </p>
                    <% end %>
                  </div>
              <% end %>
            </div>
        </div>
    </div>
</body>
</html>
