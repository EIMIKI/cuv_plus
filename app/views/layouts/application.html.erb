<!DOCTYPE html>
<html>
  <head>
    <title>CuvPlus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="manifest" href="/manifest.json">
  </head>

  <body>
    <div class="header">
      <div class="page-title">
        <%= link_to("/") do %>
          <h1>Comic Update Viewer</h1>
        <% end %>
      </div>
      <div class="setting-link">
        <%= link_to("表示設定","/setting")%>
      </div>
    </div>

    <% if flash[:notice]%>
      <div class="notice">
        <%= flash[:notice]%>
      </div>
    <% end%>
    <%= yield %>
  </body>
</html>
