<!DOCTYPE html>
<html>
  <head>
    <title>CuvPlus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
        <%= link_to("/") do %>
          <h1>Comic Update Viewer</h1>
        <% end %>
        <%= link_to("表示設定","/setting")%>
    </div>
    <% if flash[:notice]%>
      <%= flash[:notice]%>
    <% end%>
    <%= yield %>
  </body>
</html>
